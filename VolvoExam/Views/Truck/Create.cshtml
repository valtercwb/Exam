@model VolvoExam.ViewModels.TruckViewModel

@{ 
    ViewData["Title"] = "Create"; 
    var truckModels=  ViewData["TruckModels"] as List<SelectListItem>;
    var modelYear=  ViewData["ModelYear"] as List<SelectListItem>;
}

<h2>Register new truck</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelYear" class="control-label"></label>
                <select asp-for="ModelYear" class="form-control" asp-items="@modelYear"></select>
                <span asp-validation-for="ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TruckModel.Name" class="control-label"></label>
                <select asp-for="TruckModelId" class="form-control" asp-items="@truckModels"></select>
                <span asp-validation-for="TruckModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">&laquo; Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
